<!-- Modal -->



    <form style="position:center;">
        <h4 class="headFont">اضافه کردن کاربران</h4>
        <table class="table table-bordered">
            <tr>
                <td><p class="tblFont">نام</p></td>
                <td><p class="tblFont"> نام خانوادگی  </p></td>
                <td><p class="tblFont"> نام پدر  </p></td>
                <td><p class="tblFont">  جنسیت </p></td>
            </tr>
            <tr>
                <td><input class="form-control txtFont" ng-model="txtname" type="text" placeholder=" " value=" " /></td>
                <td><input class="form-control txtFont" ng-model="txtFamily" type="text" name="FamilyName" value=" " /></td>
                <td><input class="form-control txtFont" ng-model="txtFather" type="text" name="FatherName" value=" " /></td>
                <td><input class="form-control txtFont" ng-model="txtsex" name="Sex" value=" " type="text" /></td>
            </tr>
            <tr>
                <td><p class="tblFont"> رایانامه </p></td>
                <td><p class="tblFont">تاریخ تولد   </p></td>
                <td><p class="tblFont">وضعیت تأهل  </p></td>
                <td><p class="tblFont"> کد ملی  </p></td>
            </tr>
            <tr>
                <td><input class="form-control" ng-model="txtemail" name="EMail" value=" " type="text" /></td>
                <td>
                    <input class="form-control" ng-model="txtbirth" type="text" name="BirthDate" value=" " />
                </td>
                <td><input class="form-control" ng-model="txtmarriage" type="text" name="MarriageStatus" value=" " /></td>
                <td><input class="form-control" ng-model="txtnational" type="text" name="NationalId" value=" " /></td>
            </tr>
            <tr>
                <td><p class="tblFont">شماره تلفن  </p></td>
                <td><p class="tblFont"> نام کاربری </p></td>
                <td><p class="tblFont"> گذرواژه </p></td>
                <td></td>
            </tr>
            <tr>
                <td><input class="form-control" ng-model="txtnumber" type="text" name="Number" value=" " /></td>
                <td><input class="form-control" ng-model="txtusername" type="text" name="Username" value=" " /></td>
                <td><input class="form-control" ng-model="txtpass" type="text" name="Password" value=" " /></td>
                <td></td>
            </tr>
        </table>





        <div id="dropzone2" class="dropzone sm" options="dz_PersImageOptions" methods="dz_PersImageMethods" callbacks="dzCallbacks" ng-dropzone></div>

        <button type="button" ng-disabled="VarStatusDisBtnSave" ng-click="FunSave()" class="btn btn-default btnFont" data-dismiss="modal" >افزودن</button>
        <button type="button" ng-disabled="VarStatusDisBtnUpdate" ng-click="FunUpdate()" class="btn btn-warning btnFont" data-dismiss="modal" >ویرایش</button>


        <h4 class="headFont">لیست کابران </h4>
        <br />
       

        <table  class="table table-bordered txtFont" dir="rtl">
            <tr>
                <td colspan="6">
                    <input  class="form-control" type="text" placeholder="Search ..." ng-model="txtSearch" />
                </td>
            </tr>
            <tr>
                <td class="tblFont">شماره</td>
                <td class="tblFont">نام</td>
                <td class="tblFont">نام خانوادگی</td>
                <td class="tblFont">نام کاربری </td>
                <td class="tblFont">گذرواژه</td>
                <td class="tblFont">عملیات</td>

            </tr>
            <tr ng-repeat="Item in ListAllUsers | filter:txtSearch">
                <td class="tblFont">{{$index+1}}</td>
                <td class="tblFont" ng-show="false">{{Item.ID}}</td>
                <td class="tblFont">{{Item.FirstName}}</td>
                <td class="tblFont">{{Item.LastName}}</td>
                <td class="tblFont">{{Item.Username}}</td>
                <td class="tblFont">{{Item.Password}}</td>
                <td class="tblFont">
                    <input type="button" class="btn btn-danger btnFont" value="حذف" ng-click="FunDelete(Item.ID)" />
                    <!--ModalButton-->
                    <button type="button" class="btn btn-default btnFont" ng-click="funShowUpdate(Item)">ویرایش</button>

                </td>
            </tr>
        </table>




      

    </form>









               






@section DeclareJS{
    <script src="~/Areas/Panel/Scripts/UserAddForm/JsUserAddForm.js"></script>
}